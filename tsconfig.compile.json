{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "experimentalDecorators":true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "suppressImplicitAnyIndexErrors": false,
    "lib": [
      "es6",
      "dom"
    ],
    "rootDir": "src/",
    "outDir": "lib/",
    "declaration": true,
    "declarationDir": "lib/",
    "noResolve": false,
    "typeRoots":["./node_modules/@types"]
  },

  "exclude": [
    "node_modules",
    "test",
    "lib"
  ]
}